
.login{
  display: flex;
  flex-direction: column;
}
.login image{
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  border-radius: 20%;
  margin-top: 100rpx;
}
.login text{
  font-size: 16px;
  margin: auto;
  margin-top: 100rpx;
  font-weight: 300;
  color: #595959;
  writing-mode: vertical-lr;
}
button {
  position:relative;
  display:block;
  padding-left:14px;
  padding-right:14px;
  box-sizing:border-box;
  font-size:10pt !important;
  margin-top: 300rpx;
  text-align:center;
  text-decoration:none;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#fff;
  background-color:#d70050;
}
.button-hover {
  color:#fff;
  background-color:#fff;
}

