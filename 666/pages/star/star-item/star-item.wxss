.ss1{
  width: 320rpx; 
  /* height: 100%; */
  overflow-y: auto;
  border-radius: 20rpx;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.ss1>image{
  width: 100%;
}
.ss1>view{
  height: 160rpx;
  width: 100%;
  background: #ffffff;
}
.ss1_1{
  width:100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.ss1_1>image{
  border-radius:100%;
  width:60rpx;
  height:60rpx;
  margin-left: 20rpx;
}
.ss1_1>text{
  height: 60rpx;
  line-height:60rpx;
  color:#959595;
  margin-left: 10rpx;
}
.ss1_txt1{
  /* 控制宽度 */
  width: 100%;
  max-width: 100%;
  /* 控制显示的行数 */
  max-height: 100rpx;
  line-height: 50rpx;
  /* 显示多行 */
  display:-webkit-box; 
  overflow:hidden; 
  /* 5为显示的行数 */
  letter-spacing: 3rpx;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}