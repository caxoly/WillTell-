@import '../../../common.wxss';
@import '../star-item/star-item.wxss';

page{
  background: #f5f7f9;
}
.s1{
  height: 100%;
  width: 740rpx;
  overflow-y: auto;
  display: flex; 
  flex-direction: row; 
  align-items: center;
}
.s1>view{
  height: 100%;
  width: 360rpx;
  margin: auto;
}
.weui-tabs-bar__wrp {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
}

.weui-tabs-swiper {
  width:100%;
  height: 1200rpx;
}

.tab-content {
  height:  1200rpx;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}